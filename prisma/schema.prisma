datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

enum Slot {
  MORNING_A
  MORNING_B
  AFTERNOON_A
  AFTERNOON_B
  EVENING
}

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  passwordHash String
  name         String?
  role         Role       @default(USER)
  schedules    Schedule[]
  createdAt    DateTime   @default(now())
}

model Schedule {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  date      String
  slot      Slot
  note      String?
  createdAt DateTime @default(now())

  @@unique([userId, date, slot])
}
